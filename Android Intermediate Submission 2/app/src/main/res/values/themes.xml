<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StoryMApps" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary1</item>
        <item name="colorPrimaryVariant">@color/primary2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/info1</item>
        <item name="colorSecondaryVariant">@color/info2</item>
        <item name="colorOnSecondary">@color/font</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#27374D</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/font</item>
    </style>

    <style name="Theme.StoryMApps" parent="Base.Theme.StoryMApps" />

    <style name="MyAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/primary1</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/font</item>
        <!-- Used for the background -->
        <item name="android:background">@color/info2</item>
    </style>

    <style name="TextMain">
        <item name="android:textColor">@color/font</item>
    </style>

    <style name="AuthTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">36sp</item>
        <item name="fontFamily">@font/nunitosans_extrabold</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AuthBackground">
        <item name="android:background">@drawable/bg_auth_day</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="TextForm">
        <item name="android:textColor">@color/font</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/nunitosans_semibold</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HintForm">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/nunitosans_regular</item>
        <item name="android:textColor">@color/font</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HintDesc">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/nunitosans_regular</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextButton">
        <item name="android:color">@color/font</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/nunitosans_bold</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="TextButtonSmall">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/nunitosans_bold</item>
    </style>

    <style name="TextSetting1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/nunitosans_bold</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="TextSetting2">
        <item name="android:textColor">@color/font</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/nunitosans_bold</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="TextAsk">
        <item name="android:textColor">@color/font</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/nunitosans_regular</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextAskBold">
        <item name="android:textColor">@color/info1</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/nunitosans_bold</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextUser">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/font</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/nunitosans_bold</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="TextDescription">
        <item name="android:textColor">@color/font</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/nunitosans_regular</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HomeBackground">
        <item name="android:background">@drawable/bg_home_day</item>
    </style>

    <style name="Background">
        <item name="android:background">@color/primary1</item>
    </style>

    <style name="FABBackground">
        <item name="backgroundTint">@color/info1</item>
    </style>

    <style name="CardBackground">
        <item name="android:backgroundTint">@color/white</item>
    </style>
</resources>